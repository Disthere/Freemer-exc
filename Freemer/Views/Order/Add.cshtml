
@{
    ViewData["Title"] = "Add";
}

<link rel="stylesheet" href="~/css/Add.css" media="screen" />



<div class="container" style="margin-top: 0px;">
    <div>
    <section class=" u-section-1" id="sec-60f9">
        
            <h3 class="u-align-center u-custom-font u-text u-text-default u-text-font u-text-palette-5-dark-2 u-text-1">Новый заказ на Freemer</h3>
        
    </section>
</div>
    <div class="row justify-content-center ">
        <div class="col-8">
            <form>
                <div class="form-group">
                    <label for="inputTitle">1. Заголовок заказа (будет виден в ленте заказов)</label>
                    <input type="title" class="form-control" id="inputTitle" aria-describedby="titleHelp" placeholder="Что нужно сделать?">
                    <small id="titleHelp" class="form-text text-muted">Например, так - Разработать небольшое приложение WPF, или - Доработать сайт интернет-магазина</small>
                </div>

                <!-- <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div> -->
                <div class="form-group">
                    <label for="descriptionTextarea">2. Детали заказа (описание)</label>
                    <textarea class="form-control" id="descriptionTextarea" rows="12"></textarea>
                    <small id="descriptionHelp" class="form-text text-muted">Например, так - Разработать приложение WPF для учета количества сотрудников и времени их работы, несколько окон с простым подсчетом, сортировкой по статусу работника (работает, в отпуске, на больничном) и т. д.</small>
                </div>
                <button type="submit" class="btn btn-primary">Продолжить</button>
            </form>
        </div>
    </div>
</div>
